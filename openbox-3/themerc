window.active.label.text.font:shadow=y:shadowtint=25:shadowoffset=1
window.inactive.label.text.font:shadow=y:shadowtint=0:shadowoffset=1
osd.*.label.text.font:shadow=y:shadowtint=-20:shadowoffset=1


!# just no bevel, right?
*.bg.highlight: 0
